{
  "name": "@news-api/worker",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file ../../.env src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --out-dir dist",
    "start": "node dist/index.js",
    "lint": "biome lint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@news-api/config": "0.1.0",
    "@news-api/db": "0.1.0",
    "@news-api/logger": "0.1.0",
    "@news-api/shared": "0.1.0",
    "@mozilla/readability": "^0.5.0",
    "jsdom": "^25.0.0",
    "node-html-parser": "^6.1.10",
    "p-queue": "^8.0.1",
    "prom-client": "^15.1.3",
    "rss-parser": "^3.13.0",
    "tinyld": "^1.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "tsup": "^8.2.4",
    "tsx": "^4.17.0",
    "vitest": "^4.0.8"
  }
}

{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "files": {
    "include": ["**/*.ts", "**/*.tsx"],
    "ignore": [
      "**/node_modules/**",
      "**/.next/**",
      "**/dist/**",
      "**/build/**",
      "**/.turbo/**"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}

